<section id="content">
    <div class="container">
        <div id="main">
            <div class="row">

                <div class="col-sm-12">

                    <div class="hotel-list">
                        <div class="row image-box hotel listing-style1">
                            @foreach (var item in Model.OncelikliOteller)
                            {
                                <div class="col-sm-6 col-md-3">
                                    <article class="box">
                                        <figure>
                                            <a href="@item.Link" class="hover-effect"><img width="270" height="161" alt="" style="height:161px !important" src="@item.Resim"></a>
                                        </figure>
                                        <div class="details" style="height:275px">

                                            <h4 class="box-title" style="height:50px">@item.Adi</h4>
                                            <div class="feedback">
                                                <div data-placement="bottom" data-toggle="tooltip" class="five-stars-container" title=""><span style="width: 80%;" class="five-stars"></span></div>
                                                <span class="review" style="font-weight:bold;color:#000000;text-transform:none;font-size:12px">@item.Konumu.Split(',')[item.Konumu.Split(',').Length - 1]</span>
                                            </div>
                                            <p class="description" style="height:100px">@item.KisaAciklama</p>
                                            <div class="action">
                                                <a class="button btn-small yellow" href="@item.Link">Oteli İncele</a>
                                            </div>
                                        </div>
                                    </article>
                                </div>
                            }




                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>